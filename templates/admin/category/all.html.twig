{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1 class="admin-h1">{{ 'Категории'|trans|raw }}</h1>
    <div class="mb-3">
        <a href="{{ path('admin_category_add') }}" class="btn btn-primary" role="button"><i class="fas fa-plus-circle mr-2"></i>{{ 'Добавить'|trans|raw }}</a>
    </div>
    {% if categories %}
        <table class="table table-responsive">
            <tr class="bg-light text-dark small">
                <th>ID</th>
                <th>{{ 'Изображение'|trans|raw }}</th>
                <th>{{ 'Название'|trans|raw }}</th>
                <th class="text-center">{{ 'Продукты'|trans|raw }}</th>
                <th class="text-center">{{ 'Действия'|trans|raw }}</th>
            </tr>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td><img src="{% if category.image and fileExists(asset(image_category_dir ~ '/' ~ category.image)) %}{{ asset(image_category_dir ~ '/' ~ category.image) }}{% else %}{{ asset('build/images/common/no-image-150.png') }}{% endif %}" class="img-fluid" alt=""></td>
                    <td class="min-width-300"><a href="{{ path('admin_category_single', {'id': category.id}) }}" class="text-decoration-none{% if category.isVisible != 1 %} text-disabled{% endif %}">{{ category.name }}</a></td>
                    <td class="text-center">{{ category.products.count }}</td>
                    <td>
                        <div class="min-width-300 text-center">
                            <a class="btn btn-light" href="{{ path('admin_category_sort', {'id': category.id}) }}" role="button"><i class="fas fa-exchange-alt fa-rotate-90"></i></a>
                            <a class="btn btn-light" href="{{ path('admin_category_edit', {'id': category.id}) }}" role="button"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-light text-danger" href="{{ path('admin_category_delete', {'id': category.id}) }}" role="button"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <p class="mt-3">{{ 'Нет категорий'|trans|raw }}!</p>
    {% endif %}
{% endblock %}
