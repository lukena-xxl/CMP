{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1 class="admin-h1">{{ 'Пользователи'|trans|raw }} <span class="text-muted small">({{ role }})</span></h1>
    {% if users %}
        <ul class="list-group">
            {% for user in users %}
                <li class="list-group-item rounded-0">
                    <a href="{{ path('admin_user_single', {'id': user.id}) }}" class="mr-2">
                        {{ user.login }}
                    </a>
                    <div class="text-muted small">{{ 'Дата регистрации'|trans|raw }}: {{ user.registrationDate.format("d.m.Y H:i") }}</div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <span class="text-muted">{{ 'нет'|trans|raw }}</span>
    {% endif %}
{% endblock %}
