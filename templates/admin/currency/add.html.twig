{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div>
        <h1 class="admin-h1">{{ title }}</h1>
        <fieldset class="input-max-width-700 custom-project">
            {{ form_start(form_add) }}
            <ul class="nav nav-tabs" id="nameTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="ru-name-tab" data-toggle="tab" href="#ru-name" role="tab" aria-controls="ru-name" aria-selected="true">RU</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="uk-name-tab" data-toggle="tab" href="#uk-name" role="tab" aria-controls="uk-name" aria-selected="false">UK</a>
                </li>
            </ul>
            <div class="tab-content p-2 bg-light border border-top-0 mb-3" id="nameTabContent">
                <div class="tab-pane fade show active" id="ru-name" role="tabpanel" aria-labelledby="ru-name-tab">
                    {{ form_row(form_add.name) }}
                </div>
                <div class="tab-pane fade" id="uk-name" role="tabpanel" aria-labelledby="uk-name-tab">
                    {{ form_row(form_add.translation_name) }}
                </div>
            </div>
            <ul class="nav nav-tabs" id="shortTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="ru-short-tab" data-toggle="tab" href="#ru-short" role="tab" aria-controls="ru-short" aria-selected="true">RU</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="uk-short-tab" data-toggle="tab" href="#uk-short" role="tab" aria-controls="uk-short" aria-selected="false">UK</a>
                </li>
            </ul>
            <div class="tab-content p-2 bg-light border border-top-0 mb-3" id="shortTabContent">
                <div class="tab-pane fade show active" id="ru-short" role="tabpanel" aria-labelledby="ru-short-tab">
                    {{ form_row(form_add.short) }}
                </div>
                <div class="tab-pane fade" id="uk-short" role="tabpanel" aria-labelledby="uk-short-tab">
                    {{ form_row(form_add.translation_short) }}
                </div>
            </div>
            {{ form_row(form_add.abbr) }}
            {{ form_row(form_add.symbol) }}
            {{ form_row(form_add.display) }}
            {{ form_row(form_add.submit) }}
            {{ form_end(form_add) }}
        </fieldset>
    </div>
{% endblock %}
