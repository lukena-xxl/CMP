{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h3 class="admin-h3">{{ 'Информация'|trans|raw }}</h3>
            <div class="mb-2 font-weight-bold">{{ 'Название'|trans|raw }}:</div>
            <div class="mb-3 custom-project">
                <ul class="nav nav-tabs" id="nameTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="ru-name-tab" data-toggle="tab" href="#ru-name" role="tab" aria-controls="ru-name" aria-selected="true">RU</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="uk-name-tab" data-toggle="tab" href="#uk-name" role="tab" aria-controls="uk-name" aria-selected="false">UK</a>
                    </li>
                </ul>
                <div class="tab-content p-2 bg-light border border-top-0 mb-3" id="nameTabContent">
                    <div class="tab-pane fade show active" id="ru-name" role="tabpanel" aria-labelledby="ru-name-tab">
                        <div class="h2 px-2">{{ currency.name }}</div>
                    </div>
                    <div class="tab-pane fade" id="uk-name" role="tabpanel" aria-labelledby="uk-name-tab">
                        <div class="h2 px-2">
                            {% if translation['uk']['name'] is defined and translation['uk']['name'] %}
                                {{ translation['uk']['name'] }}
                            {% else %}
                                <span class="small text-muted">{{ 'нет'|trans|raw }}</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="mb-2 font-weight-bold">{{ 'Сокращенно'|trans|raw }}:</div>
            <div class="mb-3 custom-project">
                <ul class="nav nav-tabs" id="shortTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="ru-short-tab" data-toggle="tab" href="#ru-short" role="tab" aria-controls="ru-short" aria-selected="true">RU</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="uk-short-tab" data-toggle="tab" href="#uk-short" role="tab" aria-controls="uk-short" aria-selected="false">UK</a>
                    </li>
                </ul>
                <div class="tab-content p-2 bg-light border border-top-0 mb-3" id="shortTabContent">
                    <div class="tab-pane fade show active" id="ru-short" role="tabpanel" aria-labelledby="ru-short-tab">
                        <div class="px-2">{{ currency.short }}</div>
                    </div>
                    <div class="tab-pane fade" id="uk-short" role="tabpanel" aria-labelledby="uk-short-tab">
                        <div class="px-2">
                            {% if translation['uk']['short'] is defined and translation['uk']['short'] %}
                                {{ translation['uk']['short'] }}
                            {% else %}
                                <span class="small text-muted">{{ 'нет'|trans|raw }}</span>
                            {% endif %}</div>
                    </div>
                </div>
            </div>
            <ul class="list-group">
                <li class="list-group-item rounded-0">ID: <strong>{{ currency.id }}</strong></li>
                <li class="list-group-item rounded-0">{{ 'Международное обозначение'|trans|raw }}: <strong>{{ currency.abbr }}</strong></li>
                <li class="list-group-item rounded-0">{{ 'Знак'|trans|raw }}: <strong>{{ currency.symbol }}</strong></li>
                {% set default = { short: currency.short,
                    abbr: currency.abbr,
                    symbol: currency.symbol }
                %}
                <li class="list-group-item rounded-0">{{ 'Показывать по умолчанию'|trans|raw }}: <strong>{{ default[currency.display] }}</strong></li>
                <li class="list-group-item rounded-0">
                    <a class="btn btn-light mb-1 text-primary" href="{{ path('admin_currency_edit', {'id': currency.id}) }}" role="button"><i class="fas fa-edit mr-2"></i>{{ 'Редактировать'|trans|raw }}</a>
                    <a class="btn btn-light mb-1 text-danger" href="{{ path('admin_currency_delete', {'id': currency.id}) }}" role="button"><i class="fas fa-trash-alt mr-2"></i>{{ 'Удалить'|trans|raw }}</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
