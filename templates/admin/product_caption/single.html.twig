{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-5">
            <div class="mb-3">
                <ul class="list-group">
                    <li class="list-group-item rounded-0 text-white">
                        {% if caption.isVisible == 0 %}
                            <span class="d-inline-block px-2 bg-danger">{{ 'Отключено'|trans|raw }}</span>
                        {% else %}
                            <span class="d-inline-block px-2 bg-success">{{ 'Включено'|trans|raw }}</span>
                        {% endif %}
                    </li>
                    <li class="list-group-item rounded-0"><strong>ID:</strong> {{ caption.id }}</li>
                    <li class="list-group-item rounded-0"><strong>{{ 'Цвет текста'|trans|raw }}:</strong><span class="px-2">{{ caption.colorText }}</span><span class="px-2 border" style="background-color:{{ caption.colorText }}"></span></li>
                    <li class="list-group-item rounded-0"><strong>{{ 'Цвет заливки'|trans|raw }}:</strong><span class="px-2">{{ caption.colorFill }}</span><span class="px-2 border" style="background-color:{{ caption.colorFill }}"></span></li>
                    <li class="list-group-item rounded-0">
                        <a class="btn btn-light mb-1 text-primary" href="{{ path('admin_product_caption_edit', {'id': caption.id}) }}" role="button"><i class="fas fa-edit mr-2"></i>{{ 'Редактировать'|trans|raw }}</a>
                        <a class="btn btn-light mb-1 text-danger" href="{{ path('admin_product_caption_delete', {'id': caption.id}) }}" role="button"><i class="fas fa-trash-alt mr-2"></i>{{ 'Удалить'|trans|raw }}</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-sm-7">
            <div class="px-3 py-1 d-inline-block h5 mb-3" style="{% if caption.colorFill %}background-color:{{ caption.colorFill }};{% endif %}{% if caption.colorText %}color:{{ caption.colorText }};{% endif %}">{{ caption.name }}</div>
            <div class="mb-3 custom-project">
                <ul class="nav nav-tabs" id="nameTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="ru-name-tab" data-toggle="tab" href="#ru-name" role="tab" aria-controls="ru-name" aria-selected="true">RU</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="uk-name-tab" data-toggle="tab" href="#uk-name" role="tab" aria-controls="uk-name" aria-selected="false">UK</a>
                    </li>
                </ul>
                <div class="tab-content p-2 bg-light border border-top-0 mb-3" id="nameTabContent">
                    <div class="tab-pane fade show active" id="ru-name" role="tabpanel" aria-labelledby="ru-name-tab">
                        <div class="h2 px-2">{{ caption.name }}</div>
                    </div>
                    <div class="tab-pane fade" id="uk-name" role="tabpanel" aria-labelledby="uk-name-tab">
                        <div class="h2 px-2">
                            {% set trns = translate(caption, 'uk', 'name') %}
                            {% if trns %}
                                {{ trns }}
                            {% else %}
                                <span class="small text-muted">{{ 'нет'|trans|raw }}</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
